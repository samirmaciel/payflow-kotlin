<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/inputs"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/lexendregular"
        android:textColor="@color/heading"
        android:text="O Boleto Tia Maria no valor de R$ 568,00 já foi pago?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNotYet"
            app:strokeWidth="4dp"
            android:outlineProvider="none"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/heading"
            android:textSize="15sp"
            android:text="Ainda não"
            android:background="@drawable/ripple_button_default" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonYes"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/ripple_button_primarycolor"
            android:fontFamily="@font/inter"
            android:outlineProvider="none"
            android:text="Sim"
            android:textColor="@color/background"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/stroke"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDeletePayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineProvider="none"
            android:text="Deletar boleto"
            android:textSize="15sp"
            android:fontFamily="@font/inter"
            android:textAllCaps="false"
            android:textColor="@color/delete"
            app:backgroundTint="@color/background"
            android:background="@drawable/ripple_button_default"
            android:drawableLeft="@drawable/ic_baseline_delete_24"/>


    </LinearLayout>

</LinearLayout>